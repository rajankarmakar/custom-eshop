<div class="featured-category">
  <div class="container">
    <div class="tab-content text-center">
      <div class="title-product pt-4">
        {% if section.settings.section_title != blank %}
          <h2 class="text-center">{{ section.settings.section_title }}</h2>
        {% endif %}
        <div class="featured">
          {% for block in section.blocks %}
            {% if block.settings.article != blank %}
              <div class="content-category">
                <div class="content-img">
                  <a href="#">
                    <img
                      src="{{ block.settings.article.image.src | img_url }}"
                      alt="{{ block.settings.article.title }}"
                      class="img-fluid"
                      width="200"
                      height="200"
                    >
                  </a>
                </div>
                <div class="info-category">
                  <h3>
                    <a href="{{block.settings.product.url }}">{{ block.settings.product.title }}</a>
                  </h3>
                  <p>Author: {{ block.settings.article.author }}</p>
                  <p>
                    Category:
                    {% for tag in block.settings.article.tags %}
                      {{ tag }}
                    {% endfor %}
                  </p>
                  <a href="{{ block.settings.article.url }}" style="display: block; padding-top:1rem;">Read more</a>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .featured {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
  }

  .content-category {
    flex: 1 1 200px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    border: 1px solid #ccc;
    padding: 10px;
    box-sizing: border-box;
  }

  .content-img {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
  }

  .img-fluid {
    max-width: 100%;
    height: auto;
  }

  .info-category {
    margin-top: auto;
    text-align: center;
  }

  .info-category h3 a {
    text-decoration: none;
    color: inherit;
  }
</style>

{% schema %}
{
  "name": "Blog List",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section title",
      "default": "Blog list"
    }
  ],
  "blocks": [
    {
      "type": "blog",
      "name": "Blog Item",
      "settings": [
        {
          "type": "article",
          "id": "article",
          "label": "Article"
        }
      ]
    }
  ]
}
{% endschema %}
